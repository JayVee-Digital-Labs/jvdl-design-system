{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist/types",
    "emitDeclarationOnly": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "incremental": false 
  },
  "include": ["src/**/*"],
  "exclude": [
    "**/*.cy.*",
    "**/*.test.*",
    "**/*.stories.*",
    "cypress.config.ts",
    "vitest.config.ts",
    "next.config.ts"
  ]
}